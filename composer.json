{
    "name": "exolnet/laravel-vue-data",
    "description": "Adds utilities to easily pass data from Laravel to Vue.",
    "keywords": [
        "exolnet",
        "laravel",
        "laravel-vue-data"
    ],
    "homepage": "https://github.com/eXolnet/laravel-vue-data",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre Dâ€™Eschambeault",
            "homepage": "https://www.exolnet.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/support": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "exolnet/phpcs-config": "^2.0",
        "mockery/mockery": "^1.4.3",
        "orchestra/testbench": "^4.0|^5.0|^6.0",
        "phpunit/phpunit": "^9.3.3",
        "squizlabs/php_codesniffer": "^3.6.0"
    },
    "autoload": {
        "psr-4": {
            "Exolnet\\VueData\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Exolnet\\VueData\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs -p -s --standard=ruleset.xml",
        "lint-fix": "vendor/bin/phpcbf -p --standard=ruleset.xml",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Exolnet\\VueData\\VueDataServiceProvider"
            ],
            "aliases": {
                "Vue": "Exolnet\\VueData\\Facades\\Vue"
            }
        }
    }
}
